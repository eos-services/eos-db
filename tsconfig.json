{
  "compilerOptions": {
    "target": "es2020",
    "module": "CommonJS",
    "outDir": "./lib",
    "rootDir": "./src",
    "declaration": true,
    "declarationDir": "./types",
    "removeComments": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src"]
}